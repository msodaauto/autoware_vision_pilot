run_scene3d:
    # TensorRT
    parallel --verbose --lb ::: \
             "./install/bin/video_publisher -k video/input -c DEFAULT_CONFIG.json5 ../data/video.mp4" \
             "./install/bin/run_model ../data/models/Scene3D_FP32.onnx -i video/input -o video/output -m depth -b tensorrt -p fp16 -c DEFAULT_CONFIG.json5" \
             "./install/bin/depth_subscriber -k video/output -c DEFAULT_CONFIG.json5"
    # ONNX Runtime
    #parallel --verbose --lb ::: \
